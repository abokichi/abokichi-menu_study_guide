        }
        
        .item-price {
            color: #e74c3c;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .item-desc {
            color: #666;
            font-size: 14px;
        }
        
        /* Flashcards */
        .flashcard {
            text-align: center;
